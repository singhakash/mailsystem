<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>com.javatpoint.servlet.RegisterServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.javatpoint.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>InboxServlet</servlet-name>
    <servlet-class>com.javatpoint.servlet.InboxServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ComposeForm</servlet-name>
    <servlet-class>com.javatpoint.servlet.ComposeForm</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.javatpoint.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ComposeServlet</servlet-name>
    <servlet-class>com.javatpoint.servlet.ComposeServlet</servlet-class>
  </servlet>






  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>InboxServlet</servlet-name>
    <url-pattern>/inbox</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ComposeForm</servlet-name>
    <url-pattern>/composeform</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ComposeServlet</servlet-name>
    <url-pattern>/compose</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>home.html</welcome-file>
  </welcome-file-list>
</web-app>
